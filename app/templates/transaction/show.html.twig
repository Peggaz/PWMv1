{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.transaction_details'|trans({'%id%': transaction.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.transaction_details'|trans({'%id%': transaction.id|default('')}) }}</h1>
    {% if transaction is defined and transaction|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>{{ transaction.id }}</dd>
            <dt>{{ 'label.name'|trans }}</dt>
            <dd>{{ transaction.name }}</dd>
            <dt>{{ 'label.balance'|trans }}</dt>
            <dd>{{ transaction.balance }}</dd>

        </dl>
        <p>
            <a href="{{ url('transaction_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'action.back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}